# Azure OCR (Document Intelligence) Configuration
AZURE_OCR_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_OCR_API_KEY=your_ocr_api_key_here
AZURE_OCR_MODEL=prebuilt-layout

# Azure OpenAI Configuration for Chat
AZURE_CHAT_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_CHAT_KEY=your_chat_api_key_here
AZURE_CHAT_DEPLOYMENT=gpt-4o
AZURE_CHAT_API_VERSION=2025-01-01-preview

# Azure OpenAI Configuration for Embeddings
AZURE_EMBEDDINGS_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_EMBEDDINGS_KEY=your_embeddings_api_key_here
